{
  "name": "@susisu/type-of-schema",
  "version": "0.2.1",
  "description": "Derives TypeScript type from JSON Schema",
  "repository": "https://github.com/susisu/type-of-schema.git",
  "author": "Susisu <susisu2413@yahoo.co.jp>",
  "license": "MIT",
  "main": "lib/index.js",
  "sideEffects": false,
  "files": [
    "lib",
    "src",
    "!src/**/*.{test,spec}.{ts,tsx}",
    "!src/**/__tests__"
  ],
  "scripts": {
    "lint": "run-s lint:eslint lint:prettier",
    "lint-fix": "run-s lint-fix:eslint lint-fix:prettier",
    "lint:eslint": "eslint src '*.js'",
    "lint-fix:eslint": "eslint --fix src '*.js'",
    "lint:prettier": "prettier --check src '*.js'",
    "lint-fix:prettier": "prettier --write src '*.js'",
    "test": "tsc -p tsconfig.json --noEmit",
    "build": "tsc --build tsconfig.build.json",
    "clean": "tsc --build tsconfig.build.json --clean",
    "prepublishOnly": "run-s clean lint test build"
  },
  "devDependencies": {
    "@susisu/eslint-config": "^0.0.65",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0",
    "typescript": "^5.1.6"
  }
}
